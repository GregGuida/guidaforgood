<div class="container is-desktop">
    <h3 id="rsvp" class="section has-text-centered is-size-2">RSVP</h3>
    <h2 id="rsvp-form-loader" class="loader is-hidden is-size-2 is-centered">
    </h2>
    <h4 id="rsvp-form-success" class="is-hidden zoomIn has-text-centered is-size-4">
        Thank you!
    </h4>
    <div class="section">
        <form id="rsvp-form" action="/rsvp" method="post">
            <div class="columns">
                <div class="column">
                    <input id="rsvp-form-name" class="input" name="name" type="name" placeholder="Your Name"/>
                </div>
                <div class="column">
                    <input id="rsvp-form-email" class="input" name="email" type="email" placeholder="Your Email"/>
                </div>
                <div class="column">
                    <input id="rsvp-form-number-of-guests" class="input" name="number_of_guests" type="text" placeholder="Number attending"/>
                </div>
            </div>
            
            <div class="level">
                
                <label class="radio level-item" for="rsvp-form-will-attend">
                    <input id="rsvp-form-will-attend" type="radio" name="answer" value="yes">
                    &nbsp;Yes I will attend
                </label>

                
                <label class="radio level-item" for="rsvp-form-will-not-attend">
                    <input id="rsvp-form-will-not-attend" type="radio" name="answer" value="no">
                    &nbsp; No I will not be attending
                </label>
            </div>

            <div class="level">
                <input class="level-item button" type="submit" value="Submit"/>
            </div>
        </form>
    </div>
</div>

